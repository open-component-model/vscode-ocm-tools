{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"scripts",
		"media/jsconfig.json"
	]
}
